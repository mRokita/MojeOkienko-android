<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/preferences_internet_usage">
        <CheckBoxPreference
            android:title="@string/preferences_load_office_photos"
            android:defaultValue="true"
            android:key="loadOfficePhotos"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/preferences_ticket_tracking">
        <EditTextPreference
            android:title="@string/preferences_notification_time"
            android:defaultValue="4"
            android:inputType="number"
            android:key="notificationTime"/>
    </PreferenceCategory>
</PreferenceScreen>